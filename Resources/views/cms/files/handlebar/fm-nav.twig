{% verbatim %}
    <div id="h1">
        <h1>
            {{#compare '' keyword operator="=="}}
                <ol class="breadcrumb pull-left">
                    {{#each path}}
                        {{#compare id ../currentFolder.id operator="!="}}
                            <li>
                                <a href="#" data-id="{{id}}" title="{{title}}">{{title}}</a>
                            </li>
                        {{/compare}}
                        {{#compare id ../currentFolder.id operator="=="}}
                            <li class="active">
                                <strong title="{{title}}">{{title}}</strong>
                            </li>
                        {{/compare}}
                    {{/each}}
                </ol>
            {{/compare}}

            {{#compare '' keyword operator="!="}}
                <div>Search results for <span class="label label-warning pz-label">{{keyword}}</span></div>
            {{/compare}}
        </h1>
        <div class="addForm">
            {{#compare '' keyword operator="=="}}
                {{#ifMoreThan1 path}}
                    <button class="btn btn-xs btn-circle btn-warning" data-toggle="modal" data-target="#js-edit-dialog">
                       Change Folder Name
                    </button>
                {{/ifMoreThan1}}
            {{/compare}}

            {{#compare '' keyword operator="=="}}
                <button class="btn btn-xs btn-circle btn-info" data-toggle="modal" data-target="#js-add-dialog">
                    Add Subfolder
                </button>
            {{/compare}}

            {{#compare '' keyword operator="=="}}
                {{#ifMoreThan1 path}}
                    <button class="btn btn-xs btn-circle btn-danger btn-outline js-folder-delete" data-id="{{currentFolder.id}}" data-parent="{{currentFolder.parentId}}">
                        Delete Folder
                    </button>
                {{/ifMoreThan1}}
            {{/compare}}
        </div>
    </div>
    <div class="clearfix"></div>
{% endverbatim %}

