{% extends 'cms/cart/account-member.html.twig' %}

{% block memberContentWraper %}
    <div class="row">
        <div class="col-10 mx-auto">
            <h2 class="mb-5">Saved Addresses</h2>
            <div class="table-responsive">
                <table class="table addresses">
                    <thead>
                        <tr>
                            <th>Primary</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for i in 1..3 %}
                            <tr>
                                <td>
                                    <input type="radio" name="primary" {% if loop.index == 1 %}checked{% endif %}/>
                                </td>
                                <td>Andrew Mike</td>
                                <td>16 Main street 75002 Paris</td>
                                <td class="td-actions text-right">
                                    <a href="/account/address" class="btn btn-success btn-sm">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="#" class="btn btn-danger btn-sm">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}