{% extends 'cms/cart/account-member.html.twig' %}
{% form_theme formView 'form.twig' %}

{% block memberContentWraper %}
    <div class="row bg-white pb-5 pt-2">
        <div class="col-md-10 ml-auto mr-auto">
            <h2 class="mb-5">Change Password</h2>
            <form method="post" class="settings-form" novalidate autocomplete="off">
                <div class="row mb-4">
                    {% for passwordField in formView.passwordInput %}
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group mb-0">
                                {{ form_label(passwordField) }}
                                {{ form_widget(passwordField,{attr:{class:'form-control', placeholder: loop.index == 1 ? 'Password' : 'Repeat Password'}}) }}
                                {{ form_errors(passwordField) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% if submitted == 1 %}
                    <div class="alert alert-success">
                        <div class="container">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <i class="nc-icon nc-simple-remove"></i>
                            </button>
                            <span>Your data has been updated</span>
                        </div>
                    </div>
                {% endif %}

                {{ form_rest(formView) }}
                <div class="text-center">
                    <button type="submit" class="btn btn-wd btn-info btn-round">Save</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}