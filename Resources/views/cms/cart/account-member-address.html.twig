{% extends 'cms/cart/account-member.html.twig' %}

{% block memberContentWraper %}
    <div class="row title-row">
        <div class="col-md-8 col-sm-12 pt-5 px-5">
            <strong><a href="#" class="font-weight-bold">Addresses</a> <small class="px-2">&#10097;</small> #Json Smith, 123 Fake Rd, Somewhere</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 ml-auto mr-auto">
            <h4 class="mb-3">Address Detail</h4>
            <form class="settings-form">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control border-input" placeholder="First Name" type="text">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control border-input" placeholder="Last Name" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Address:</label>
                    <input class="form-control border-input" placeholder="Address" type="text">
                </div>
                <div class="form-group">
                    <label>Address 2:</label>
                    <input class="form-control border-input" placeholder="Address 2" type="text">
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Suburb:</label>
                            <input class="form-control border-input" placeholder="Suburb" type="text">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>City:</label>
                            <input class="form-control border-input" placeholder="CityCity" type="text">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Postcode:</label>
                            <input class="form-control border-input" placeholder="Postcode" type="text">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Country:</label>
                            <input class="form-control border-input" placeholder="Country" type="text">
                        </div>
                    </div>
                </div>
                <div class="text-center pt-2">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Save</button>
                    <button type="button" class="btn btn-danger"><i class="fa fa-times"></i> Delete</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}