{% extends 'base.html.twig' %}
{% block bodyClass %}page-cart-review{% endblock %}

{% block container %}
    <div class="section section-white" style="padding-top: 100px;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title">My Shopping Cart</h1>
                </div>
                <div class="col-md-10 ml-auto mr-auto">
                    <div class="table-responsive">
                        <table class="table table-shopping">
                            <thead>
                                <tr>
                                    <th class="text-center"></th>
                                    <th></th>
                                    <th class="text-right">Price</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-right" style="width: 10em;">Total</th>
                                    <th class="text-right">&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for i in 1..3 %}
                                    <tr>
                                        <td>
                                            <img src="/images/product1.jpg" alt="" style="height: 150px;">
                                        </td>
                                        <td class="td-product">
                                            <p>Product name</p>
                                        </td>
                                        <td class="td-price">
                                            <small>$</small>
                                            499
                                        </td>
                                        <td class="td-number td-quantity">
                                            1
                                        </td>
                                        <td class="td-number">
                                            <small>$</small>
                                            998
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="order-info" class="container mb-5">
        <form method="post" class="settings-form" action="#order-info" novalidate autocomplete="off">
            <div class="row">
                <div class="col-md-6 js-billing">
                    <h3 class="mb-3">Send invoice to</h3>
                    <div class="form-group pb-3">
                        <label>Email address:</label>
                        <p>luckyweida@gmail.com</p>
                    </div>
                    <h3 class="mb-3">Billing Address</h3>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>First name:</label>
                                <p>Weida</p>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Last name:</label>
                                <p>Xue</p>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Phone number:</label>
                                <p>021 123456</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Address:</label>
                        <p>123 Queen Street</p>
                    </div>
                    <div class="form-group">
                        <label>Address 2:</label>
                        <p></p>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>City:</label>
                                <p>Auckland</p>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Postcode:</label>
                                <p>1234</p>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Region:</label>
                                <p></p>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Country:</label>
                                <p>New Zealand</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Note:</label>
                        <p></p>
                    </div>
                </div>
                <div class="col-md-6 js-shipping">
                    <h3 class="mb-3">Shipping Address</h3>
                    <div class="form-check">
                        <label class="">
                            Same as billing address
                        </label>
                    </div>
                </div>
                <div class="col-sm-4 pt-2 ml-auto">
                    <div class="title">
                        <h3>Delivery option</h3>
                    </div>
                    <div class="form-check-radio">
                        <label class="">
                            Standard Delivery (5-7 days)
                        </label>
                    </div>
                </div>
                <div class="col-md-12 text-center cart-total-summary">
                    <div class="row">
                        <div class="col-md-10 ml-auto mr-auto">
                            <div class="table-responsive">
                                <table class="table table-shopping">
                                    <thead>
                                    <tr>
                                        <th class="text-center"></th>
                                        <th></th>
                                        <th class="text-right">Price</th>
                                        <th class="text-right">Quantity</th>
                                        <th class="text-right" style="width: 10em;">Total</th>
                                        <th class="text-right">&nbsp;</th>
                                    </tr>
                                    </thead>
                                    <tbody class="js-cart-total-full">
                                    <tr class="calc-row">
                                        <td colspan="2"></td>
                                        <td></td>
                                        <td class="td-total">
                                            Subtotal
                                        </td>
                                        <td class="td-total" colspan="2">
                                            <small>$</small>
                                            900.00
                                        </td>
                                    </tr>
                                    <tr class="calc-row">
                                        <td colspan="2"></td>
                                        <td></td>
                                        <td class="td-total">
                                            Discount
                                        </td>
                                        <td class="td-total" colspan="2">
                                            -
                                            <small>$</small>
                                            100.00
                                        </td>
                                    </tr>

                                    <tr class="calc-row">
                                        <td colspan="2"></td>
                                        <td></td>
                                        <td class="td-total">
                                            GST
                                        </td>
                                        <td class="td-total" colspan="2">
                                            <small>$</small>
                                            200.00
                                        </td>
                                    </tr>
                                    <tr class="calc-row">
                                        <td colspan="2"></td>
                                        <td></td>
                                        <td class="td-total">
                                            Delivery fee
                                        </td>
                                        <td class="td-total" colspan="2">
                                            <small>$</small>
                                            50.00
                                        </td>
                                    </tr>
                                    <tr class="calc-row">
                                        <td colspan="2"></td>
                                        <td></td>
                                        <td class="td-total">
                                            Total
                                        </td>
                                        <td class="td-total" colspan="2">
                                            <small>$</small>
                                            800.00
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 text-center mt-5">
                    <a href="/wine" class="btn btn-info btn-round">&#10096; Edit cart</a>
                    <button type="submit" class="btn btn-danger btn-round">Pay now &#10097;</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}