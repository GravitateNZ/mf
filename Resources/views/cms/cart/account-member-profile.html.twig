{% extends 'cms/cart/account-member.html.twig' %}

{% block memberContentWraper %}
    <div class="row pt-2">
        <div class="col-md-10 ml-auto mr-auto">
            <h2 class="mb-5">Personal Information</h2>
            <form class="settings-form">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control border-input" placeholder="First Name" type="text">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control border-input" placeholder="Last Name" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input class="form-control border-input" placeholder="Email" type="text">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control textarea-limited" placeholder="This is a textarea limited to 150 characters." rows="3" maxlength="150"></textarea>
                </div>
                <div class="text-center pt-2">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Save</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}