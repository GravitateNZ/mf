{% extends 'cms/cart/account-member.html.twig' %}
{% form_theme formView 'form.twig' %}

{% block memberContentWraper %}
    <div class="row">
        <div class="col-md-10 ml-auto mr-auto">
            <h2 class="mb-5">Personal Information</h2>
            <form method="post" class="settings-form" novalidate autocomplete="off">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        {{ form_row(formView.firstName) }}
                    </div>
                    <div class="col-md-6 col-sm-6">
                        {{ form_row(formView.lastName) }}
                    </div>
                </div>

                {{ form_row(formView.description) }}

                {% if submitted == 1 %}
                    <div class="alert alert-success">
                        <div class="container">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <i class="nc-icon nc-simple-remove"></i>
                            </button>
                            <span>Your data has been updated</span>
                        </div>
                    </div>
                {% endif %}

                {{ form_rest(formView) }}
                <div class="text-center">
                    <button type="submit" class="btn btn-wd btn-info btn-round">Save</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}