{% if cart.objOrderItems|length > 0 %}
    <div class="cart__amount">
        <span class="cart__subtotal">Subtotal</span>
        <span class="cart__price">${{ cart.subtotal|number_format(2) }}</span>
    </div>
    <div class="cart__shipping">
        <span>Shipping</span>
        <span>Calculated at next step</span>
    </div>
    <div class="cart__shipping-link-wrapper">
        <a class="cart__shipping-link" href="#delivery-options" data-fancybox data-options='{"touch": false, "smallBtn": true, "toolbar": false}'>
            <span class="txt">See delivery options</span>
        </a>
    </div>
    <a class="cart__checkout button button--primary" href="/cart">
        <span class="txt">Checkout</span>
        <i class="icon icon--r">{% include "/cart/svg/icon--cart-checkout.svg" %}</i>
    </a>
    <ul class="cart__partners">
        <li class="cart__partner">
            <img class="cart__partner-logo" src="/images/payment/colour/logo--mastercard.svg" alt="Mastercard">
        </li>
        <li class="cart__partner">
            <img class="cart__partner-logo" src="/images/payment/colour/logo--visa.svg" alt="Visa">
        </li>
        <li class="cart__partner">
            <img class="cart__partner-logo" src="/images/payment/colour/logo--gem.svg" alt="Gem">
        </li>
        <li class="cart__partner">
            <img class="cart__partner-logo" src="/images/payment/colour/logo--finance-now.svg" alt="Finance Now">
        </li>
        <li class="cart__partner">
            <img class="cart__partner-logo" src="/images/payment/colour/logo--humm.svg" alt="humm">
        </li>
        <li class="cart__partner">
            <img class="cart__partner-logo" src="/images/payment/colour/logo--laybuy.svg" alt="Laybuy">
        </li>
    </ul>
{% endif %}
